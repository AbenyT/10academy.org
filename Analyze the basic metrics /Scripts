# Import required libraries
import pandas as pd
import numpy as np

# Load the dataset
file_path = '/mnt/data/image.png'  # Adjust this path to your dataset's location or name
# Load your dataset (replace with pd.read_csv if your file is a CSV)
# Assuming it's a CSV format, otherwise adjust according to your data format
df = pd.read_csv(file_path)

# Perform basic statistical analysis
def analyze_basic_metrics(df):
    metrics = {}

    # Iterate through each column in the dataset
    for column in df.select_dtypes(include=[np.number]).columns:
        # Skip missing values
        if df[column].isnull().all():
            continue

        metrics[column] = {
            'Mean': df[column].mean(),
            'Median': df[column].median(),
            'Standard Deviation': df[column].std(),
            'Minimum': df[column].min(),
            'Maximum': df[column].max(),
            '25th Percentile': df[column].quantile(0.25),
            '50th Percentile (Median)': df[column].quantile(0.50),
            '75th Percentile': df[column].quantile(0.75),
            '90th Percentile': df[column].quantile(0.90)
        }

    return pd.DataFrame(metrics)

# Run the analysis and store results
metrics_df = analyze_basic_metrics(df)

# Display the results
print(metrics_df)

# Save the results to a CSV file for further review
metrics_df.to_csv('basic_metrics_analysis.csv')
